
#!/usr/bin/env
# Example environment variables for Free URL Shortener
# Copy this file to `.env.local` and fill in values before running the app.
#
# Notes
# - Variables prefixed with NEXT_PUBLIC_ are exposed to the browser.
# - Booleans should be the strings "true" or "false" (not 1/0).
# - Omit optional sections to disable related features.

###############################################
# Required
###############################################
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/shortener

# White-label branding
# Display name of your app/brand
NEXT_PUBLIC_APP_NAME=MyShortener
# Public domain shown in UI (no protocol)
NEXT_PUBLIC_APP_DOMAIN=localhost:3000
# Absolute site URL with protocol
NEXT_PUBLIC_APP_URL=http://localhost:3000


###############################################
# Optional: Rate Limiting (Upstash Redis)
###############################################
# Provide both to enable middleware rate limiting
# If omitted, rate limiting is disabled.
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Requests allowed per window; defaults to 10 if unset
RATE_LIMIT_REQUESTS=10
# Window size in milliseconds; defaults to 60000 (60s) if unset
RATE_LIMIT_WINDOW_MS=60000


###############################################
# Optional: Short URL generation
###############################################
# Length of auto-generated short IDs; defaults to 6 if unset
SHORT_URL_LENGTH=6


###############################################
# Optional: Redirect Page (interstitial)
###############################################
# Enable/disable interstitial redirect page; defaults to true if unset
REDIRECT_PAGE_ENABLED=true
# Countdown duration in seconds; defaults to 15 if unset
REDIRECT_PAGE_TIMER_DURATION=15
# Show interstitial only after at least X accesses; defaults to 10 if unset
REDIRECT_PAGE_SHOW_ONLY_AFTER_X_ACCESSES=10


###############################################
# Optional: Analytics
###############################################
# Enable server-side analytics endpoint; defaults to false if unset
ENABLE_ANALYTICS=false


###############################################
# Optional: Google Ads (AdSense)
###############################################
# Master toggle for ads in UI; defaults to false if unset
NEXT_PUBLIC_GOOGLE_ADS_ENABLED=false
# Control AdSense script loading; defaults to true if unset
NEXT_PUBLIC_GOOGLE_ADS_SCRIPT_ENABLED=true
# Your AdSense client ID, e.g. ca-pub-XXXXXXXXXXXXXXXX
NEXT_PUBLIC_GOOGLE_ADS_CLIENT_ID=

# Ad slots (optional) – used in redirect page/homepage placements
NEXT_PUBLIC_GOOGLE_ADS_REDIRECT_PRIMARY=
NEXT_PUBLIC_GOOGLE_ADS_REDIRECT_SECONDARY=
NEXT_PUBLIC_GOOGLE_ADS_REDIRECT_BANNER=
NEXT_PUBLIC_GOOGLE_ADS_HOMEPAGE=


###############################################
# Optional: Contact & Footer
###############################################
# Contact email (used in legal pages)
SUPPORT_EMAIL=
# Show a “View Source on Github” link in footer if set
NEXT_PUBLIC_GITHUB_PAGE=
