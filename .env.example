
# Example environment variables for Free URL Shortener
# Copy this file to `.env.local` and fill in the actual values before running the app.

# The config.ts file contains defaults for all these settings.
# Use environment variables to override values for different:
# - Environments (development, staging, production)
# - Branded instances
# - Security configurations

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/<your_db_name>


# Redis Configuration
UPSTASH_REDIS_REST_URL="https://your-upstash-url"
UPSTASH_REDIS_REST_TOKEN="your-upstash-token"


# Instance Configuration (White-Label Settings)
NEXT_PUBLIC_APP_NAME="YourAppName"           # Your branded app name
NEXT_PUBLIC_APP_DOMAIN="localhost:3000" # No https://
NEXT_PUBLIC_APP_URL="http://localhost:3000"
DOMAIN="http://localhost:3000"

# Security Settings
RATE_LIMIT_REQUESTS=10          # Maximum requests per window
RATE_LIMIT_WINDOW_MS=60000      # Window size in milliseconds (60 seconds)
SHORT_URL_LENGTH=6              # Length of generated short URLs

# Feature Flags
ENABLE_ANALYTICS=true           # Enable click tracking and analytics
ENABLE_ADS=true                 # Enable ad-supported redirects
ENABLE_CUSTOM_DOMAINS=false     # Enable custom domain support

# Contact Information
SUPPORT_EMAIL="support@example.com"

# Redirect Page
REDIRECT_PAGE_ENABLED=true # Enable/disable redirect page feature (true/false)
REDIRECT_PAGE_TIMER_DURATION=15 # Duration in seconds for redirect timer
REDIRECT_PAGE_SHOW_ONLY_AFTER_X_ACCESSES=10 # After how many accesses the redirect page will be shown
